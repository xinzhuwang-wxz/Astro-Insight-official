# LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# ===========================================
# 搜索配置
# ===========================================
SEARCH_PROVIDER=tavily
SEARCH_BASE_URL=https://api.tavily.com
SEARCH_MAX_RESULTS=10

# 搜索域名过滤
# 允许的域名（权威、学术、官方）
SEARCH_ALLOWED_DOMAINS=nasa.gov,esa.int,arxiv.org,aps.org,sciencedirect.com,nature.com,science.org,sdss.org

# 禁止的域名（社区、低可信度）
SEARCH_BLOCKED_DOMAINS=reddit.com,quora.com,zhihu.com,wikipedia.org,baike.baidu.com,medium.com,stackoverflow.com

# 内容安全过滤
SEARCH_SAFE_CONTENT=true

# ===========================================
# 数据库配置
# ===========================================
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astro_insight.db
DB_USER=
DB_PASSWORD=

# ===========================================
# 服务器配置
# ===========================================
SERVER_HOST=localhost
SERVER_PORT=8000

# ===========================================
# 缓存配置
# ===========================================
CACHE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# 安全配置
# ===========================================
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
